<script>
    {% if subscribe is not null and subscribe == true %}
    $('#subscribe_success').modal();
    {% elseif subscribe is not null and subscribe == false %}
    $('#subscribe_fail').modal();
    {% endif %}

    $('a[href^="#"]').click(function () {
        elementClick = $(this).attr("href");
        destination = $(elementClick).offset().top;
        jQuery("html:not(:animated),body:not(:animated)").animate({scrollTop: destination}, 1200);
        return false;
    });

    var subscribe = function () {

        var _name = $('#name').val();
        var _email = $('#email').val();
        var _btn = $('.form button');
        var _form_name = $('.form .name');
        var _form_email = $('.form .email');
        var _form_name_err= $('.form .name .err-message');
        var _form_email_err = $('.form .email .err-message');

        var isValid = function () {
            var valid = true;
            if ('undefined' === typeof _name || 0 === _name.length) {
                valid = false;
                _form_name.addClass('error');
                _form_name_err.show();
            } else {
                _form_name.removeClass('error');
                _form_name_err.hide();
            }

            var regexp = new RegExp(/.+@.+\..+/);

            if ('undefined' === typeof _email || 0 === _email.length || !regexp.test(_email)) {
                valid = false;
                _form_email.addClass('error');
                _form_email_err.show();
            } else {
                _form_email.removeClass('error');
                _form_email_err.hide();
            }

            return valid;
        };

        var removeClassErrorEmail = function () {
            _form_email.removeClass('error');
            _form_email_err.hide();
        };

        var removeClassErrorName = function () {
            _form_name.removeClass('error');
            _form_name_err.hide();
        };

        $('.form .name input').on('keypress', removeClassErrorName);
        $('.form .email input').on('keypress', removeClassErrorEmail);

        var create = function () {

            if (!isValid()) {
                return;
            }

            _btn.prop('disabled', true);
            _btn.addClass('load');

            $.ajax({
                url: "{{ url('subscribe') }}",
                method: 'POST',
                data: ({
                    name: _name,
                    email: _email
                })
            }).done(function (data) {

                if ('error' === data['status']) {
                    console.info(data);
                    $('#subscribe_fail .body.error').append(data['data']);
                    $('#subscribe_fail').modal();
                    _btn.prop('disabled', false);
                    _btn.removeClass('load');
                } else {
                    pay(data['data']);
                }
            });
        };

        var pay = function (data) {
            var form = document.createElement("form");
            form.setAttribute("method", "post");
            form.setAttribute("action", data['acs_uri']);
            var params = data['acs_params'];

            for (var i in params) {
                if (params.hasOwnProperty(i)) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = i;
                    input.value = params[i];
                    form.appendChild(input);
                }
            }
            document.body.appendChild(form);
            form.submit();
        };

        create();
    };
    $('#subscribe').on('click', subscribe);
</script>

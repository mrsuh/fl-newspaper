<script>
    var subscribe = function () {

        var _name = $('.subscribe-form .name input').val();
        var _email = $('.subscribe-form .email input').val();

        var isValid = function () {
            var valid = true;
            if ('undefined' === typeof _name || 0 === _name.length) {
                valid = false;
                $('.subscribe-form .name').addClass('error');
            } else{
                $('.subscribe-form .name').removeClass('error');
            }

            var regexp = new RegExp(/.+@.+\..+/);

            if ('undefined' === typeof _email || 0 === _email.length || !regexp.test(_email)) {
                valid = false;
                $('.subscribe-form .email').addClass('error');
            } else{
                $('.subscribe-form .email').removeClass('error');
            }

            return valid;
        };

        var remoceClassError = function(){
            $(this).parent().removeClass('error');
        };

        $('.subscribe-form .name input').on('keypress', remoceClassError);
        $('.subscribe-form .email input').on('keypress', remoceClassError);

        var create = function () {

            if (!isValid()) {
                return;
            }

            $('.subscribe-form button').prop('disabled', true);
            $('.subscribe-form button').addClass('load');

            $.ajax({
                url: "{{ url('subscribe') }}",
                method: 'POST',
                data: ({
                    name: _name,
                    email: _email
                })
            }).done(function (data) {
                console.info('done');
                pay(data);
            });
        };

        var pay = function (data) {
            var form = document.createElement("form");
            form.setAttribute("method", "post");
            form.setAttribute("action", data['acs_uri']);
            var params = data['acs_params'];

            for (var i in params) {
                if (params.hasOwnProperty(i)) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = i;
                    input.value = params[i];
                    form.appendChild(input);
                }
            }
            document.body.appendChild(form);
            console.info('submit');
            form.submit();
        };

        create();
    };
    $('#subscribe').on('click', subscribe);
</script>

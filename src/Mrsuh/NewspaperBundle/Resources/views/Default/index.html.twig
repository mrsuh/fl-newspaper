<script>
    var subscribe = function () {

        var _name = $('#name').val();
        var _email = $('#email').val();

        var isValid = function () {
            var valid = true;
            if ('undefined' === typeof _name || 0 === _name.length) {
                valid = false;
                $('.form .name').addClass('error');
            } else {
                $('.form .name').removeClass('error');
            }

            var regexp = new RegExp(/.+@.+\..+/);

            if ('undefined' === typeof _email || 0 === _email.length || !regexp.test(_email)) {
                valid = false;
                $('.form .email').addClass('error');
            } else {
                $('.form .email').removeClass('error');
            }

            return valid;
        };

        var remoceClassError = function () {
            $(this).parent().removeClass('error');
        };

        $('.form .name input').on('keypress', remoceClassError);
        $('.form .email input').on('keypress', remoceClassError);

        var create = function () {

            if (!isValid()) {
                return;
            }

            $('.form button').prop('disabled', true);
            $('.form button').addClass('load');

            $.ajax({
                url: "{{ url('subscribe') }}",
                method: 'POST',
                data: ({
                    name: _name,
                    email: _email
                })
            }).done(function (data) {
                console.info('done');
                pay(data);
            });
        };

        var pay = function (data) {
            var form = document.createElement("form");
            form.setAttribute("method", "post");
            form.setAttribute("action", data['acs_uri']);
            var params = data['acs_params'];

            for (var i in params) {
                if (params.hasOwnProperty(i)) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = i;
                    input.value = params[i];
                    form.appendChild(input);
                }
            }
            document.body.appendChild(form);
            console.info('submit');
            form.submit();
        };

        create();
    };
    $('#subscribe').on('click', subscribe);
</script>
